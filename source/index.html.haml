%script#infowindowTemplate{:type => "text/template"}
  :plain
    <section class='infowindow'>
      <header>
        <h4>
          <% if(!isBlank(web)){ %>
            <a href='http://<%= web %>'><%= name %></a>
          <% } else { %>
            <%= name %>
          <% } %>
        </h4>
      </header>
      <article>
        <ul>
          <% if(!isBlank(state)){ %>
            <li><%= state %></li>
          <% } %>
          <% if(!isBlank(address)){ %>
            <li><%= address %></li>
          <% } %>
          <% if(!isBlank(phone)){ %>
            <li><%= phone %></li>
          <% } %>
          <% if(!isBlank(email)){ %>
            <li><%= email %></li>
          <% } %>
          <% if(!isBlank(service_days)){ %>
            <li><%= service_days %></li>
          <% } %>
          <% if(!isBlank(service_hours)){ %>
            <li><%= service_hours %></li>
          <% } %>
        </ul>
      </article>
    </section>
%script#resultsTemplate{:type => "text/template"}
  :plain
    <h4>Resultados</h4>
    <% _.each(results, function(result){ %>
    <section class='infowindow'>
      <article>
        <ul>
          <li>
            <br />
            <%= result.name %>
            <br />
            <a class='organization' data-latitude='<%= result.latitude %>' data-longitude='<%= result.longitude %>' href='#'>Ver en el mapa</a>
          </li>
        </ul>
      </article>
    </section>
    <% }); %>
